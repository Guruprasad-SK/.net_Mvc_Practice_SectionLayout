
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
</head>
<body>
    <header style="background-color:aqua; height:100px">
        @RenderSection("PageName", required: true)
        <h1>This is header</h1>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer style="background-color:blueviolet; height:100px">
        <h1>This is footer</h1>
    </footer>
    <div>
        Name -
        @RenderSection("renderName",required:false)
    </div>
</body>
</html>
